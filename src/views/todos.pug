doctype html
html
  head
    title #{title}
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="/js/todos.js" defer)
  body 
    .container
      h1 Todo List
      ul.list-group
        each todo in todos
          li.list-group-item.d-flex.align-items-center.gap-3
            input.form-check-input.check-input-show(type="checkbox" checked=todo.done data-id=todo.id id=`todo-${todo.id}`)
            label.form-check-label(for=`todo-${todo.id}`)
              span.todo-id ##{todo.id}. 
              span.todo-title #{todo.title}
            button.btn.btn-danger.ms-auto.delete-btn(data-id=todo.id) Delete

      form.mt-4.d-flex.align-items-center.gap-3#newTodoForm
        input.form-check-input(type="checkbox" name="status" checked=false)
        input.form-control(type="text" name="title" placeholder="Add new todo" required)
        button.btn.btn-primary(type="submit") Add

    